{
  "attributes": [
    { "key": "text" },
    { "key": "text_size" }
  ],
  "contentReplaceRules": [
    {
      "value": "{{if eq .Instance.TextSize \"small\"}}{{.Instance.text}}{{end}}",
      "elementXPath": "//*[starts-with(@id,'text-small')]"
    },
    {
      "value": "{{if eq .Instance.TextSize \"medium\"}}{{.Instance.text}}{{end}}",
      "elementXPath": "//*[starts-with(@id,'text-medium')]"
    },
    {
      "value": "{{if eq .Instance.TextSize \"large\"}}{{.Instance.text}}{{end}}",
      "elementXPath": "//*[starts-with(@id,'text-large')]"
    }
  ]
}
